<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:backgroundTint="#FFFFFF"
    tools:context="com.sandesh.calculator.MainActivity">

    <Button
        android:id="@+id/btn0"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@drawable/circle"
        android:padding="16dp"
        android:text="0"
        app:layout_constraintStart_toStartOf="@+id/btn1"
        app:layout_constraintTop_toBottomOf="@+id/btn1" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@drawable/circle"
        android:padding="16dp"
        android:text="1"
        app:layout_constraintStart_toStartOf="@+id/btn4"
        app:layout_constraintTop_toBottomOf="@+id/btn4" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@drawable/circle"
        android:padding="16dp"
        android:text="2"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn1"
        app:layout_constraintStart_toEndOf="@+id/btn1" />

    <Button
        android:id="@+id/btn3"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@drawable/circle"
        android:padding="16dp"
        android:text="3"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn2"
        app:layout_constraintStart_toEndOf="@+id/btn2" />

    <Button
        android:id="@+id/btn4"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@drawable/circle"
        android:padding="16dp"
        android:text="4"
        app:layout_constraintStart_toStartOf="@+id/btn7"
        app:layout_constraintTop_toBottomOf="@+id/btn7" />

    <Button
        android:id="@+id/btn5"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@drawable/circle"
        android:padding="16dp"
        android:text="5"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn4"
        app:layout_constraintStart_toEndOf="@+id/btn4" />

    <Button
        android:id="@+id/btn6"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@drawable/circle"
        android:padding="16dp"
        android:text="6"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn5"
        app:layout_constraintStart_toEndOf="@+id/btn5" />

    <Button
        android:id="@+id/btn7"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/circle"
        android:padding="16dp"
        android:text="7"
        app:layout_constraintStart_toStartOf="@+id/res"
        app:layout_constraintTop_toBottomOf="@+id/res" />

    <Button
        android:id="@+id/btn8"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@drawable/circle"
        android:padding="16dp"
        android:text="8"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn7"
        app:layout_constraintStart_toEndOf="@+id/btn7" />

    <Button
        android:id="@+id/btn9"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@drawable/circle"
        android:padding="16dp"
        android:text="9"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn8"
        app:layout_constraintStart_toEndOf="@+id/btn8" />

    <Button
        android:id="@+id/clear"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@drawable/circle"
        android:padding="16dp"
        android:text="C"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn9"
        app:layout_constraintStart_toEndOf="@+id/btn9" />

    <Button
        android:id="@+id/dot"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@drawable/circle"
        android:padding="16dp"
        android:text="."
        app:layout_constraintBaseline_toBaselineOf="@+id/btn0"
        app:layout_constraintStart_toEndOf="@+id/btn0" />

    <Button
        android:id="@+id/equals"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@drawable/circle"
        android:padding="16dp"
        android:text="="
        app:layout_constraintBaseline_toBaselineOf="@+id/dot"
        app:layout_constraintStart_toEndOf="@+id/dot" />

    <Button
        android:id="@+id/minus"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@drawable/circle"
        android:padding="16dp"
        android:text="-"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn3"
        app:layout_constraintStart_toEndOf="@+id/btn3" />

    <Button
        android:id="@+id/divide"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@drawable/circle"
        android:padding="16dp"
        android:text="/"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn6"
        app:layout_constraintStart_toEndOf="@+id/btn6" />

    <Button
        android:id="@+id/add"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:background="@drawable/circle"
        android:padding="16dp"
        android:text="+"
        app:layout_constraintBaseline_toBaselineOf="@+id/equals"
        app:layout_constraintStart_toEndOf="@+id/equals" />

    <EditText
        android:id="@+id/input"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@null"
        android:cursorVisible="true"
        android:ems="10"
        android:focusable="auto"
        android:focusableInTouchMode="false"
        android:paddingEnd="16dp"
        android:paddingRight="16dp"
        android:textAlignment="textEnd"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/res"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="0.0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input" />

</android.support.constraint.ConstraintLayout>
